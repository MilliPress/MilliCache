{
    "name": "millipress/millicache",
    "description": "The most flexible Full Page Cache for scaling WordPress sites. Enterprise-grade in-memory store with Redis, ValKey, Dragonfly, KeyDB, or any alternative.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Philipp Wellmer",
            "email": "hello@millipress.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "millipress/millirules": "^0.2.0",
        "predis/predis": "^2.2",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "*",
        "php-stubs/wp-cli-stubs": "^2.10",
        "phpstan/phpstan": "@stable",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "swissspidy/phpstan-no-private": "^0.2.0",
        "roave/security-advisories": "dev-latest",
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "MilliCache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MilliCache\\Tests\\": "tests/Unit/"
        }
    },
    "suggest": {
        "ext-zlib": "Allows MilliCache to compress the cache with zlib."
    },
    "scripts": {
        "test": "composer test:fix && composer test:lint && composer test:phpstan && composer test:unit",
        "test:unit": "pest --colors=always",
        "test:coverage": "pest --coverage --min=80",
        "test:phpstan": "phpstan analyse -c phpstan.neon --memory-limit 1G",
        "test:lint": "phpcs --standard=phpcs.xml -s",
        "test:fix": "phpcbf --standard=phpcs.xml",
        "post-install-cmd": [
            "@mozart-if-present",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "@mozart-if-present",
            "composer dump-autoload"
        ],
        "mozart-if-present": [
            "bash -c \"if [ -f 'mozart.phar' ]; then php mozart.phar compose; elif [ -f 'vendor/bin/mozart' ]; then vendor/bin/mozart compose; fi\""
        ],
        "cghooks": [
            "vendor/bin/cghooks"
        ]
    },
    "config": {
        "vendor-dir": "vendor",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "mozart": {
            "dep_namespace": "MilliCache\\Deps\\",
            "dep_directory": "/src/Deps/",
            "classmap_directory": "/classes/",
            "classmap_prefix": "MilliCache_",
            "packages": [
                "predis/predis",
                "millipress/millirules"
            ]
        },
        "hooks": {
            "config": {
                "stop-on-failure": ["pre-push"]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer test"
            ],
            "pre-push": [
                "composer validate --no-check-all --no-check-publish",
                "composer test"
            ],
            "post-merge": [
                "composer install"
            ]
        }
    }
}
