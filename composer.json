{
    "name": "millipress/millicache",
    "description": "Redis Full Page Cache for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Philipp Wellmer",
            "email": "hello@millipress.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "*",
        "php-stubs/wp-cli-stubs": "^2.10",
        "phpstan/phpstan": "@stable",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "swissspidy/phpstan-no-private": "^0.2.0",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "ext-zlib": "Allows compressing the cache with zlib."
    },
    "scripts": {
        "test": "composer fix && composer lint && composer phpstan",
        "phpstan": "phpstan analyse -c phpstan.neon --memory-limit 1G",
        "lint": "phpcs --standard=phpcs.xml -s",
        "fix": "phpcbf --standard=phpcs.xml",
        "post-install-cmd": [
            "curl -L -o mozart.phar https://github.com/coenjacobs/mozart/releases/latest/download/mozart.phar",
            "php mozart.phar compose",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "php mozart.phar compose",
            "composer dump-autoload"
        ],
        "cghooks": [
            "vendor/bin/cghooks"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "mozart": {
            "dep_namespace": "MilliCache\\",
            "dep_directory": "/src/",
            "classmap_directory": "/classes/",
            "classmap_prefix": "MilliCache_"
        },
        "hooks": {
            "config": {
                "stop-on-failure": ["pre-push"]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer test"
            ],
            "pre-push": [
                "composer validate --no-check-all --no-check-publish",
                "composer test"
            ],
            "post-merge": [
                "composer install"
            ]
        }
    }
}
