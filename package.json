{
  "name": "millicache",
  "version": "1.0.0-beta.1",
  "author": "Philipp Wellmer <hello@millipress.com>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/node": "^20.12.7",
    "@wordpress/e2e-test-utils-playwright": "1.3.0",
    "@wordpress/env": "^9.7.0",
    "dotenv": "^16.4.5"
  },
  "scripts": {
    "wp-env": "wp-env",
    "env": "node ./tests/wp-env/dev-server.mjs",
    "env:start": "npm run env start",
    "env:stop": "npm run env stop",
    "env:reset": "wp-env clean all && npm run env:start",
    "env:destroy": "npm run env destroy",
    "env:cli": "wp-env run cli",
    "env:redis-cli": "wp-env run cli bash -c 'redis-cli -h ${1:-redis}'",
    "env:tests-cli": "wp-env run tests-cli $@",
    "env:tests-redis-cli": "wp-env run tests-cli bash -c 'redis-cli -h ${1:-redis}'",
    "env:e2e": "npx playwright test step --workers=1",
    "env:e2e:performance": "npx playwright test performance --workers=1",
    "env:e2e:performance:results": "node tests/e2e/performance/results.js"
  }
}
